{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "mailing/templates/**/*",
                "outDir": "dist"
            },
            {
                "include": "suggest/scripts/**/*",
                "outDir": "dist"
            },
            {
                "include": "dashboard/logo/**/*",
                "outDir": "dist"
            }
        ],
        "watchAssets": true
    }
}